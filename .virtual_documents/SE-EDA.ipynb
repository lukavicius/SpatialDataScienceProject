# Load Natural Earth country geometries
world = gpd.read_file("110m_cultural//ne_110m_admin_0_countries.shp")

#2023 data
se_data = pd.read_csv("socio_economic_data.csv")
se_data_2023 = se_data[se_data['year'] == 2023]

# Merge with your dataset
gdf = world.merge(se_data_2023, left_on='ISO_A3', right_on='iso3', how = 'inner')

# Project to metric CRS for distance-based weights
gdf = gdf.to_crs(epsg=3857)

features = [
    "Gender Inequality Index",
    "Gross National Income Per Capita",
    "Income Inequality",
    "Life Expectancy at Birth",
    "population_density",
    "infant_mortality_rate",
    "employment_rate"
]

# impute missing values for any feature

from sklearn.impute import KNNImputer

imputer = KNNImputer(n_neighbors=5)
gdf[features] = imputer.fit_transform(gdf[features])

#neighbors based but note that we have islands 
w_queen = Queen.from_dataframe(gdf)
w_queen.transform = "r"

# distance-based
w_dist = DistanceBand.from_dataframe(
    gdf,
    threshold=1_500_000,  # meters 1500km
    binary=True
)
w_dist.transform = "r"

w_dist_far = DistanceBand.from_dataframe(
    gdf,
    threshold=3_000_000,  # meters 1500km
    binary=True
)
w_dist.transform = "r"



# Get indices of countries with no neighbors
isolated_idx = [idx for idx, neigh in w_queen.neighbors.items() if len(neigh) == 0]

# Map to country ISO3 and name
isolated_countries = gdf.loc[isolated_idx, ["ISO_A3", "ADMIN"]]

# Print results
print("Countries with no Queen contiguity neighbors (true islands):")
print(isolated_countries)






results = []

w1 = w_queen
w2 = w_dist
w3 = w_dist_far

for var in features:
    x = gdf[var].values
    x = (x - x.mean()) / x.std()  # standardize
    
    moran_w1 = Moran(x, w1)
    moran_w2 = Moran(x, w2)
    moran_w3 = Moran(x, w3)

    
    results.append({
        "Variable": var,
        "Moran I (Queen)": round(moran_w1.I, 4),
        "p-value (Queen)": round(moran_w1.p_sim, 4),
        "Moran I (1500km)": round(moran_w2.I, 4),
        "p-value (1500km)": round(moran_w2.p_sim, 4),
        "Moran I (3000km)": round(moran_w3.I, 4),
        "p-value (3000km)": round(moran_w3.p_sim, 4)
    })

# Convert to DataFrame
moran_df = pd.DataFrame(results)

# Save as LaTeX table

with open("moran_comparison.tex", "w") as f:
    f.write(moran_df.to_latex(index=False, caption="Global Moran's I for two spatial weights", label="tab:moran_comparison"))






# compute lisa clusters 
def compute_lisa(gdf, variable, weights, p=0.05):
    """
    Computes LISA clusters for a given variable and spatial weights
    """
    x = gdf[variable].values
    x = (x - x.mean()) / x.std()  # standardize

    lisa = Moran_Local(x, weights)
    #lisa = Moran_Local(x, weights, permutations=999, seed=42)


    cluster = np.full(len(gdf), "Not significant", dtype=object)

    sig = lisa.p_sim < p

    cluster[sig & (lisa.q == 1)] = "High-High"
    cluster[sig & (lisa.q == 2)] = "Low-High"
    cluster[sig & (lisa.q == 3)] = "Low-Low"
    cluster[sig & (lisa.q == 4)] = "High-Low"

    return cluster

# plot function
def plot_lisa_map(gdf, cluster_col, title, save_path = None):
    colors = {
        "High-High": "#d7191c",
        "Low-Low": "#2c7bb6",
        "High-Low": "#fdae61",
        "Low-High": "#abd9e9",
        "Not significant": "lightgrey"
    }

    fig, ax = plt.subplots(figsize=(12, 8))

    gdf.plot(
        ax=ax,
        color=gdf[cluster_col].map(colors),
        linewidth=0.3,
        edgecolor="black"
    )

    handles = [
        plt.Line2D([0], [0], marker='s', color='w',
                   label=k, markerfacecolor=v, markersize=10)
        for k, v in colors.items()
    ]

    ax.legend(handles=handles, title="LISA cluster", loc="lower left")
    ax.set_title(title)
    ax.axis("off")

    # Save the figure if a path is provided
    if save_path:
        plt.savefig(save_path, dpi=300, bbox_inches='tight')


    plt.show()


